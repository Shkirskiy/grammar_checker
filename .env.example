# Telegram Bot Configuration
TELEGRAM_TOKEN=your_telegram_bot_token_here

# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
MODEL_NAME=openai/chatgpt-4o-latest

# Admin Configuration
ADMIN_ID=your_telegram_user_id_here

# User Management
# Maximum number of users allowed to use the bot
MAX_USERS=10

# Bot Behavior Settings
# Delay in seconds before processing messages (to combine multiple messages sent quickly)
# Recommended: 0.2 for fast response, higher values (1-3) to better combine split messages
MESSAGE_COMBINE_DELAY=0.2
MAX_MESSAGE_LENGTH=4000

# GitHub Repository
GITHUB_REPO_URL=https://github.com/yourusername/grammar_check_bot_v2
